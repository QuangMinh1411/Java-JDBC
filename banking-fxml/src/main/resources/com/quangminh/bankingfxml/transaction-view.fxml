<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quangminh.bankingfxml.control.TransactionController">
   <top>
      <Label fx:id="lblAccount" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="boxDebit" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Debit money">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtDebit" prefHeight="25.0" prefWidth="107.0" promptText="Enter debit cash" />
                  <Button fx:id="debitBtn" mnemonicParsing="false" onAction="#debit" text="Debit" />
               </children>
            </HBox>
            <HBox fx:id="boxCredit" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Credit money" />
                  <TextField fx:id="txtCredit" promptText="Enter credit cash" />
                  <Button fx:id="creditBtn" mnemonicParsing="false" onAction="#credit" text="Credit" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="boxTransfer" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Reiceiver Account Number" />
                  <TextField fx:id="txtReceiverNum" promptText="Receiver number" />
                  <TextField fx:id="txtAmount" />
                  <Button fx:id="transferBtn" mnemonicParsing="false" onAction="#transfer" text="Transfer" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="boxBalance" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="balanceBtn" mnemonicParsing="false" onAction="#checkBalance" text="Check Balance" />
                  <TextField fx:id="txtBalance" editable="false" promptText="Balance show here" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" text="Logout">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <TextField fx:id="secureTxt" promptText="Enter security pin" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
